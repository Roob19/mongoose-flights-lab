<%- include('../partials/header') %>

    <h2>Enter a New Flight</h2>
<form id="new-form" action="/flights" method="POST">
  <label>Airline:
    <select name="airline">
        <option value="n/a" selected></option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
        <option value="PrivateCharter">PrivateCharter</option>
      </select>
  </label><br>
  <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DEN" selected>DEN</option>
        <option value="DFW">DFW</option>
        <option value="LAX">LAX</option>
        <option value="MHR">MHR</option>
        <option value="SAN">SAN</option>
        <option value="SFO">SFO</option>
        <option value="SMF">SMF</option>
    </select>
  </label><br>
  <label>Flight Number:
    <input type="number" name="flightNo" min="10" max="9999">
  </label><br>
  <label>Departure:
    <input type="datetime-local" name="departs">
  </label><br>
  <label>Destination:
    <select name="airport">
        <option value="n/a" selected></option>
        <option value="AUS">AUS</option>
        <option value="DEN">DEN</option>
        <option value="DFW">DFW</option>
        <option value="LAX">LAX</option>
        <option value="MHR">MHR</option>
        <option value="SAN">SAN</option>
        <option value="SFO">SFO</option>
        <option value="SMF">SMF</option>
    </select>
    <input type="datetime-local" name="arrival">
  </label><br>

    <label>Seat:
        <input name="seat" pattern="/[A-F][1-9]\d?/"></input>
    </label><br>
    <label>Price: 
        <input type="number" name="price" min="0">
    </label><br>

  <input type="submit" value="Add Flight"></input>
</form>
</main>
<br><br>

<%- include('../partials/footer') %>